<ul class="list-group">
    {{#each teams as |team|}}
        <li class="list-group-item d-flex">
            <div class="team flex-fill">
                {{team.name}}
                <span class="text-muted small">{{team.country}}</span>
            </div>
            <div class="actions">
                {{#link-to "teams.team" team.id class="btn btn-sm btn-primary"}}
                    Edit
                {{/link-to}}
                <span {{action "delete" team}} class="btn btn-sm btn-danger">Delete</span>
            </div>
        </li>
    {{/each}}
</ul>
